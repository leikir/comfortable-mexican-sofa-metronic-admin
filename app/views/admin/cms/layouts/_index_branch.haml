- layout      ||= index_branch
- has_siblings  = layout.siblings.select{|l| l.site_id == @site.id}.size > 0

%li{:id => dom_id(layout)}
  .item
    .icon
      - if !params[:category].present? && has_siblings
        .dragger
          %span &#8645;

    .btn-group
      = link_to new_admin_cms_site_layout_path(@site, :parent_id => layout.id), :class => 'btn btn-small blue', title: t(".add_child_layout"), data: {tooltip: "", placement: "top", container: "body" } do
        %span.fa.fa-plus
      = link_to edit_admin_cms_site_layout_path(@site, layout), :class => 'btn btn-small yellow', title: t(".edit"), data: {tooltip: "", placement: "top", container: "body" } do
        %span.fa.fa-pencil
      = link_to admin_cms_site_layout_path(@site, layout), :method => :delete, :data => {:confirm => t('.are_you_sure')}, :class => 'btn btn-small red', title: t(".delete"), data: {tooltip: "", placement: "top", container: "body" } do
        %span.fa.fa-trash-o

    .item-content
      .item-title
        = link_to layout.label, edit_admin_cms_site_layout_path(@site, layout)
      .item-meta
        = layout.identifier

  - if layout.children.present?
    %ul= render :partial => 'index_branch', :collection => layout.children
